<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <style>
    table, th, td {
     border: 1px solid black;
    }
    </style>
    <h1>Subjects</h1>
    <a href="/subjects/add">Add</a>

    <table class="pure-table">
      <thead>
          <tr>
              <th>ID</th>
              <th>Subject</th>
              <th>Teachers</th>
              <th>Option</th>
          </tr>
      </thead>

      <tbody>
        <%dataSubjects.forEach(item =>{%>
          <tr>
              <td><%=item.id%></td>
              <td><%=item.subject_name%></td>
              <td><%=item.Teachers%></td>
              <td>
                <a href="/subjects/<%=item.id%>/enrolledStudent">Enrolled Student</a>
                <a href="/subjects/edit/<%=item.id%>">Edit</a>
                <a href="/subjects/delete/<%=item.id%>">Delete</a>
              </td>
          </tr>

        <%})%>
      </tbody>

  </table>
  </body>
</html>
